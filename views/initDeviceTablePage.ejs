<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<!-- Custom CSS styles -->
<link rel="stylesheet" href="../styles/logOutButton.css">
<link href="../styles/simpleSideBar.css" rel="stylesheet">
<link href="../styles/deviceTable.css" rel="stylesheet">

</head>
<body>
<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
            <p class="user">
            User <%= user %>
            </p>
            </li>
            <li>
            <a href="/">Home</DEL></a>
        </li>
        <li>
        <a href=<%= link %>>More Device Details</a>
        </li>
        <li>
        <a href="/Logout">Log out</a>
        </li>
    </ul>
</div>
<!-- /#sidebar-wrapper -->

<div class="container">
    <h2> <%= title %></h2> 
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th> DeviceName </th>
                    <th> Operating System </th>
                    <th> Aspect Ratio </th>
                </tr>      
            </thead>

            <tbody>     
            <% rows.forEach(function(entry){ %>     
            <tr> 
                <td> <%= entry.deviceName %> </td>
                <td> <%= entry.operatingSystem %> </td>
                <td> <%= entry.aspectRatio %> </td>
            </tr>             
            <% }) %>
            </tbody>
        </table> 
    </div>
</div>
</body>
</html>
